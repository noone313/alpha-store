                    </a>
                  </li>
                  <li class="user-profile-link">
                    <a href="/yourOrders">
                      <i class="fas fa-box-open"></i>
                      الطلبات
                    </a>
                  </li>
                
                  <li class="user-profile-link">
                    <a href="/logout" class="logout-btn">
                      <i class="fas fa-sign-out-alt"></i>
                      تسجيل الخروج
                    </a>
                  </li>
                </ul>
              </div>
            </div>
        </div>
      </div>
      
      <div class="search-container">
        <input type="text" class="search-input" placeholder="ابحث عن أي منتج...">
        <button class="search-btn"><i class="fas fa-search"></i></button>
      </div>
    </div>
  </nav>

  <!-- المحتوى الرئيسي -->
  <div class="container">
    <!-- قسم البطل -->
    <div class="hero-section">
      <div class="hero-content">
        <h1 class="hero-title">تسوق بكل راحة وأمان</h1>
        <p class="hero-subtitle">أفضل المنتجات بأسعار تنافسية وخصومات حصرية. تصفح تشكيلتنا الجديدة اليوم!</p>
        <button class="hero-btn">تسوق الآن</button>
      </div>
    </div>

    <!-- قسم الفئات -->
    <nav class="categories-nav">
      <ul class="categories-list">
        <a href="/categories"><li class="category-item active">كل الاقسام</li></a>
        <% categories.forEach(function(category) { %>
          <a href="/categories/<%= category.categoryId %>"><li class="category-item"><%= category.categoryName %></li></a>
        <% }); %>
      </ul>
    </nav>

    <!-- قسم المنتجات -->
    <section>
      <h2 class="section-title">كل منتجاتنا</h2>
     
      <div class="products-grid">
        <% products.forEach(function(product) { %>
          <a href="/products/<%= product.productId %>">
        <div class="product-card">
          <div class="product-image-container">
            <img src="/<%= product.productImage %>" class="product-image" alt="<%= product.productName %>">
          </div>
          
          <button class="wishlist-btn"><i class="far fa-heart"></i></button>
          
          <div class="product-info">
            <span class="product-category"><%= product.Category.categoryName %></span>
            <h3 class="product-title"><%= product.productName %></h3>
            
            <div class="product-price-container">
              <span class="product-price"><%= product.productPrice %> د.ع</span>
            </div>
            
            <div class="product-actions">
              <button class="add-to-cart">
                <i class="fas fa-eye"></i>
               عرض المنتج
              </button>
              
            </div>
          </div>
        </div>
      </a>
        <% }); %>
      </div>
    </section>
  </div>

  <!-- القدم - Footer -->
