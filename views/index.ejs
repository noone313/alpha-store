  <script>
    // إدارة قائمة المستخدم
    const userProfileBtn = document.getElementById('userProfileBtn');
    const userProfilePanel = document.getElementById('userProfilePanel');
  
    userProfileBtn.addEventListener('click', (e) => {
      e.stopPropagation();
      userProfilePanel.classList.toggle('active');
    });
  
    // إغلاق القائمة عند النقر خارجها
    document.addEventListener('click', (e) => {
      if (!userProfilePanel.contains(e.target) && !userProfileBtn.contains(e.target)) {
        userProfilePanel.classList.remove('active');
      }
    });
  
    // إغلاق القائمة عند النقر على أي عنصر داخلي
    userProfilePanel.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        userProfilePanel.classList.remove('active');
      });
    });
